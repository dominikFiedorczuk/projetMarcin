{% extends 'fr/base.html.twig' %}

{% block scripts %}
    <link rel="stylesheet" href="/css/scripts/lightbox.css">
    <script src="https://code.jquery.com/jquery-3.4.1.min.js"></script>
    <script src="/js/scripts/lightbox.js"></script>
    <script>
        function appearImage(img){
            $(img).fadeIn(2000);
        }
    </script>
{% endblock %}
{% block main %}
    <section class="page-section bg-dark" style="height:100%">
        <div class="container">
            <div class="row align-items-center justify-content-center text-center">
                <div class="col-md-10">
                    <h1 class="text-uppercase text-white font-weight-bold">Notre gallerie des {{folderName}}</h1>
                    <hr class="divider my-4" />
                    <div class="row justify-content-center">
                        <h5 class="text-uppercase text-white font-weight-bold">Decouvrez aussi la galerie des</h5>
                    </div>
                    <div class="row justify-content-center mb-3">
                        <div class="col">
                            {% if folderName == "Portes" %}
                                <a class="text-uppercase text-orange font-weight-bold" href="/fr/portes" class="mr-3">Portes</a>
                            {% else %}
                                <a class="text-uppercase text-white font-weight-bold" href="/fr/portes" class="mr-3">Portes</a>
                            {% endif %}
                        </div>
                        <div class="col">
                            {% if folderName == "Clôtures" %}
                                <a class="text-uppercase text-orange font-weight-bold" href="/fr/clotures">Clôtures</a>
                            {% else %}   
                                <a class="text-uppercase text-white font-weight-bold" href="/fr/clotures">Clôtures</a> 
                            {% endif %}
                        </div>
                        <div class="col">
                            {% if folderName == "Balustrades" %}
                                <a class="text-uppercase text-orange font-weight-bold" href="/fr/balustrades" class="mr-3">Balustrades</a>  
                            {% else %}
                                <a class="text-uppercase text-white font-weight-bold" href="/fr/balustrades" class="mr-3">Balustrades</a>  
                            {% endif %}
                        </div>
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col" id="gallery">
                    {% for key, value in photos %}
                        <a id="single_image" href="{{value.url}}" data-lightbox="image-1">
                            <img src="{{value.url}}" alt="..." class="img-thumbnail mr-3 mb-3" onload="appearImage(this)" style="display: none">
                        </a>
                    {% endfor %}
                    {% if photos is empty %}
                        <div class="container text-center mt-5">
                            <h1 class=" display-8 text-uppercase text-white font-weight-bold">Aucune photo disponible dans notre gallerie pour l'instant</h1>
                        </div>
                    {% endif %}
                </div>
            </div>
        </div>         
    </section>
{% endblock %}