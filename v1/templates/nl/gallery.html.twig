{% extends 'nl/base.html.twig' %}

{% block scripts %}
    <link rel="stylesheet" href="/css/scripts/lightbox.css">
    <script src="/js/scripts/lightbox.js"></script>
    <script src="/js/scripts/jquery.event.move.js"></script>
    <script src="/js/scripts/jquery.twentytwenty.js"></script>
    <link rel="stylesheet" href="/css/scripts/twentytwenty.css">

    <script>
        $('.twentytwenty-container').twentytwenty({
            before_label: 'Voordat', // Set a custom before label
            after_label: 'Na',
        });
        function appearImage(img){
            $(img).fadeIn(2000);
        }
    </script>
{% endblock %}
{% block main %}
    <section class="page-section bg-dark">
        <div class="container">
            <div class="row align-items-center justify-content-center text-center">
                <div class="col-md-10">
                    <h1 class="text-uppercase text-white font-weight-bold">Onze galerij van {{folderName}}</h1>
                    <hr class="divider my-4" />
                    <div class="row justify-content-center">
                        <h5 class="text-uppercase text-white font-weight-bold">Ontdek ook de galerij van</h5>
                    </div>
                    <div class="row justify-content-center mb-3">
                        <div class="col-sm-8">
                            {% if folderName == "Deuren" %}
                                <a class="text-uppercase text-orange font-weight-bold js-scroll-trigger" href="/nl/portes#gallery" class="mr-3">Deuren</a>
                            {% else %}
                                <a class="text-uppercase text-white font-weight-bold js-scroll-trigger" href="/nl/portes#gallery" class="mr-3">Deuren</a>
                            {% endif %}
                        </div>
                        <div class="col-sm-8">
                            {% if folderName == "Hekken" %}
                                <a class="text-uppercase text-orange font-weight-bold js-scroll-trigger" href="/nl/clotures#gallery">Hekken</a>
                            {% else %}   
                                <a class="text-uppercase text-white font-weight-bold js-scroll-trigger" href="/nl/clotures#gallery">Hekken</a> 
                            {% endif %}
                        </div>
                        <div class="col-sm-8">
                            {% if folderName == "Balustrades" %}
                                <a class="text-uppercase text-orange font-weight-bold js-scroll-trigger" href="/nl/balustrades#gallery" class="mr-3">Balustrades</a>  
                            {% else %}
                                <a class="text-uppercase text-white font-weight-bold js-scroll-trigger" href="/nl/balustrades#gallery" class="mr-3">Balustrades</a>  
                            {% endif %}
                        </div>
                        <div class="col-sm-8">
                            {% if folderName == "Renovaties" %}
                                <a class="text-uppercase text-orange font-weight-bold js-scroll-trigger" href="/nl/renovations#gallery" class="mr-3">Uitgebreide renovaties</a>  
                            {% else %}
                                <a class="text-uppercase text-white font-weight-bold js-scroll-trigger" href="/nl/renovations#gallery" class="mr-3">Uitgebreide renovaties</a>  
                            {% endif %}
                        </div>
                    </div>
                </div>
            </div>
        </div>    
    </section>    
    <section class="page-section bg-dark" id="gallery">       
        {% if folderName == "Renovaties" %}
            {% if photos is empty %}
                <div class="container">
                    <div class="row justify-content-center">
                        <h4 class="display-8 text-uppercase text-white font-weight-bold">Momenteel geen foto beschikbaar in onze galerij</h4>
                    </div>
                </div>
            {% else %}
                <div class="container">
                    {% for key, value in photos %}
                        <div id="container" class="justify-content-center twentytwenty-container mb-3">
                            <img id="compare" src="{{value.url}}" alt="{{value.url}}" class="img-responsive img-fluid" style="width: 100%;" >
                            <img id="compare" src="{{value.urlToCompare}}" alt="{{value.url}}" class="img-responsive img-fluid" style="width: 100%;">
                        </div>
                    {% endfor %}    
                </div>
            {% endif %}
        {% else %}
            {% if photos is empty %}
                <div class="container">
                    <div class="row justify-content-center">
                        <h4 class="display-8 text-uppercase text-white font-weight-bold">Momenteel geen foto beschikbaar in onze galerij</h4>
                    </div>
                </div>
            {% else %}   
                <div class="container">
                    <div class="row">
                        <div class="col" id="gallery">
                            {% for key, value in photos %}
                                <a id="single_image" href="{{value.url}}" data-lightbox="image-1">
                                    <img src="{{value.url}}" alt="{{value.url}}" class="img-thumbnail mr-3 mb-3" onload="appearImage(this)" style="display: none">
                                </a>
                            {% endfor %}
                        </div>
                    </div>
                </div> 
            {% endif %}
        {% endif %}         
    </section>
{% endblock %}